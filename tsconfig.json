{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/pages/*": ["pages/*"],
      "@/domain/*": ["domain/*"],
      "@/adapters/*": ["adapters/*"],
      "@/infra/*": ["infra/*"]
    }
  },
  "include": ["src/**/*", "jest-dom.d.ts"]
}
